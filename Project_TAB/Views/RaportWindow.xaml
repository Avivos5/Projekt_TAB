<Window x:Class="Project_TAB.Views.RaportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_TAB.Views"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="RaportWindow" Height="450" Width="800">
    <Grid Background="#F2B413">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="689*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <DataGrid
            IsReadOnly="True"
            x:Name="CategoriesDatagrid"
            Margin="10,32,422,44"
            AutoGenerateColumns="False"
            CanUserAddRows="False" SelectionChanged="CategoriesDatagrid_SelectionChanged" Grid.ColumnSpan="2">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="true">
                            <Setter Property="Background" Value="#fff" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="false">
                            <Setter Property="Background" Value="#aaa" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Category_Name}" Header="Nazwa" />

                <DataGridCheckBoxColumn Header="Uzyj" IsThreeState="False"  Binding="{Binding Category_Selected}"  />

            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{DynamicResource ButtonStyle}" Background="#F8D347" Content="Generuj" HorizontalAlignment="Left" Margin="279,72,0,0" VerticalAlignment="Top" Width="102" Click="Button_Click" RenderTransformOrigin="-1.26,-1.725" Grid.Column="1"/>
        <Button Style="{DynamicResource ButtonStyle}" Background="#F8D347" Content="Zaznacz wszystko" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="107" Click="Button_Click_1" Grid.ColumnSpan="2"/>
        <Button Style="{DynamicResource ButtonStyle}" Background="#F8D347" Content="Odznacz wszystko" HorizontalAlignment="Left" Margin="27,7,0,0" VerticalAlignment="Top" Width="107" Click="Button_Click_2" RenderTransformOrigin="-2.96,-2.575" Grid.Column="1"/>
        <Label
            Margin="279,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Początek&#xD;&#xA;" Width="92" Height="28" Grid.Column="1" />
        <DatePicker
            x:Name="datePicker1"
            Width="120"
            Margin="279,33,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Grid.Column="1" />
        <Label
            Margin="404,7,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Koniec" Width="115" Grid.Column="1" />
        <DatePicker
            x:Name="datePicker2"
            Width="120"
            Margin="404,33,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Grid.Column="1" />
        <Label
            Margin="540,7,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Konto" Grid.Column="1" />
        <ComboBox
            x:Name="Accounts_ComboBox"
            Width="120"
            Margin="540,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Account_Name"
            ItemsSource="{Binding userAccounts}"
            SelectedValuePath="Id" Grid.Column="1" />

    </Grid>
</Window>
