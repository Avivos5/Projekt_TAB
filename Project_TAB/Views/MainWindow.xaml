<Window
    x:Class="Project_TAB.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Project_TAB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <DataGrid
            x:Name="TransactionsDatagrid"
            Margin="0,37,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=DateTime}" Header="Data" />
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Nazwa" />
                <DataGridTextColumn Binding="{Binding Path=Category_Name}" Header="Kategoria" />
                <DataGridTextColumn Binding="{Binding Path=Account_Name}" Header="Konto" />
                <DataGridTextColumn Binding="{Binding Path=Transaction_Amount}" Header="Wartość transakcji" />


            </DataGrid.Columns>
        </DataGrid>
        <Label
            Name="WelcomeLabel"
            Margin="19,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Witaj, *UserName*"
            FontWeight="Bold" />
        <Button
            Width="75"
            Margin="212,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddButton_Click"
            Content="Dodaj" />


        <Button
            Width="75"
            Margin="707,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="LogoutButton_Click"
            Content="Wyloguj" />

    </Grid>
</Window>
